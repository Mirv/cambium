default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  <%= "username: #{@config[:db][:user]}" if @config[:db][:user].present? %>
  <%= "password: #{@config[:db][:password]}" if @config[:db][:password].present? %>
  socket: /tmp/mysql.sock

development:
  <<: *default
  database: <%= @config[:db][:name] %>_development

test:
  <<: *default
  database: <%= @config[:db][:name] %>_test
