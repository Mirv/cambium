default: &default
  adapter: sqlite3
  pool: 5
  timeout: 5000
  <%= "user: #{@config[:db][:user]}" if @config[:db][:user].present? %>
  <%= "password: #{@config[:db][:password]}" if @config[:db][:password].present? %>

development:
  <<: *default
  database: db/development.sqlite3

test:
  <<: *default
  database: db/test.sqlite3

production:
  <<: *default
  database: db/production.sqlite3
